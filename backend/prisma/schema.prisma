generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String    @id @default(uuid())
  name    String
  Product Product[]
}

model Product {
  id                 String   @id @default(uuid())
  name               String
  imageUrl           String
  price              Decimal  @db.Decimal(10, 2)
  description        String
  discountPercentage Int      @default(0)
  categoryId         String
  category           Category @relation(fields: [categoryId], references: [id])
}
